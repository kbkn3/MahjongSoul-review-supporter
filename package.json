{
  "name": "mahjong-soul-review-supporter",
  "displayName": "Mahjong soul review supporter",
  "version": "0.0.1",
  "description": "雀魂の牌譜検討で簡単にNAGAやmjai-reviewer(Mortal/Akochan)を利用するための非公式拡張機能です。本拡張機能は牌譜閲覧画面でのみ動作し、ゲームプレイに影響するものではありません。",
  "author": "モダンジャン研究会<ken0421wabu@gmail.com>",
  "scripts": {
    "dev": "plasmo dev --verbose",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.13.0",
    "jsdom": "^26.0.0",
    "plasmo": "0.89.4",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@testing-library/react": "^16.2.0",
    "@types/bun": "^1.1.16",
    "@types/chrome": "^0.0.296",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/web": "^0.0.195",
    "autoprefixer": "^10.4.20",
    "bun": "^1.1.43",
    "happy-dom": "^16.6.0",
    "postcss": "^8.5.1",
    "prettier": "3.2.4",
    "tailwindcss": "^3.4.17",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "storage",
      "tabs"
    ],
    "host_permissions": [
      "https://naga.dmv.nico/*",
      "https://game.mahjongsoul.com/*",
      "https://mahjongsoul.game.yo-star.com/*",
      "https://game.maj-soul.net/*",
      "https://game.maj-soul.com/*",
      "https://mjai.ekyu.moe/*"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "src/contents/paifu-main.ts",
          "src/contents/dd.ts"
        ],
        "matches": [
          "https://game.mahjongsoul.com/*",
          "https://mahjongsoul.game.yo-star.com/*",
          "https://game.maj-soul.net/*",
          "https://game.maj-soul.com/*"
        ],
        "use_dynamic_url": true
      }
    ]
  }
}

